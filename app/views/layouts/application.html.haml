!!!
%html
  %head
    %title Store
    =# stylesheet_link_tag :all
    = stylesheet_link_tag "style"
    =# javascript_include_tag :defaults
    = yield :custom_css_js
    = csrf_meta_tag
    %link{:href => "/favicon.ico", :rel => "icon", :type => "image/x-icon"}
    %link{:href => "/favicon.ico", :rel => "shortcut icon", :type => "image/x-icon"}
  %body
    .header
      %h1
        =link_to  root_path do
          %img{:alt => "Logo", :height => "120", :src => "/images/logo.png", :width => "430"}
      .cart
        = render "carts/header_cart"
      .social_network
        =link_to "Twitter", "http://twitter.com/poshstore", {:class=>"twitter"}
        =link_to "Facebook", "http://facebook.com/poshstore", {:class=>"facebook"}
    .content_wrap
      .sidebar
        .categories
          = render "categories/list"
        .search
          %h3 Поиск
          %fieldset
            %input.field{:type => "text", :value => ""}
              %input.submit{:name => "submit", :src => "/images/search.png", :type => "image"}
        .best
          %h2
            %a{:href => "/"} Специальное предложение
          .body
            %a.img{:href => "/"}
              %img{:alt => "1", :src => "/images/1.jpg"}/
            %a.title{:href => "/"}
              %h4 Мышонок с сердцем
            %a.author{:href => "/"}
              %h5 Mary Jane
          %span.price 125 Грн
          .top_left_corner
          .top_right_corner
          .bottom_left_corner
          .bottom_right_corner
        .masters
          = render "authors/list"
      .content
        .wrap
          =#.breadcrumbs
          =#  = raw render_breadcrumbs
          = yield
        -#.error
        -#  - if notice
        -#    %p#notice= notice
        -#    %p#alert= alert
        .bant
        .heart
        .cbottom_left_corner
        .cbottom_right_corner
    .footer
      %span.left_co
        ©
        =link_to "poshstore.com.ua", :root
        , 2011.
        %br>/
        Все права сохранены
      %span.right_co
        По всем вопросам обращайтесь по адресу:&nbsp;
        =mail_to "poshstoreua@gmail.com"
        %br>/
        или по телефону (093) 45 48 455
=render "layouts/analytics"