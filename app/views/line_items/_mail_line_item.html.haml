%table
- line_items.each do |line_item|

  %tr
    %td.pic
      = image_tag "http://poshstore.com.ua"+(line_item.product.image.url(:thumb))
    %td.title
      = link_to(line_item.product.title.to_s, "http://poshstore.com.ua"+category_product_path(line_item.product.category,line_item.product).to_s)
      ="("
      = line_item.product.category.name
      =")"
    %td.quantity
      = line_item.quantity.to_s+" шт."
    %td.item_price
      = line_item.total_price.to_s+" грн."
