- content_for :custom_css_js do
  =# javascript_include_tag "http://code.jquery.com/jquery-latest.js"
  = stylesheet_link_tag 'jquery.fancybox-1.3.4'
  =# javascript_include_tag "jquery-1.5.min"
  = javascript_include_tag "jquery-1.4.3.min"
  = javascript_include_tag "jquery.fancybox-1.3.4.pack"
  = javascript_include_tag "jquery.mousewheel-3.0.4.pack"
  :javascript
    $(document).ready(function() {
      $("a#light_box").fancybox({
        'transitionIn'	: 'none',
        'transitionOut'	: 'none'
      });
    });

%h3= @product.title
.border
  = link_to(image_tag(@product.image.url(:medium)), @product.image.url(:large), :id => "light_box") unless @product.image.nil?
.important
  %b=t('products.price')
  %span.price= @product.price.to_s+' грн.'
  = link_to t('products.add_to_cart'), line_items_path(:product_id => @product.id), {:class=>"add_to_cart"}  
%p
  %b=t('products.description')
  = @product.description

%p
  %b=t('products.category')
  = @product.category.name.to_s
%p
  %b=t('products.master')
  = @product.author.name.to_s

=# link_to t('layouts.application.back'), session[:product_params]