- content_for :custom_css_js do
  = stylesheet_link_tag 'jquery.fancybox-1.3.4'
  = stylesheet_link_tag "bx_styles"

  = javascript_include_tag "jquery-1.4.3.min"
  = javascript_include_tag "jquery.fancybox-1.3.4.pack"
  = javascript_include_tag "jquery.mousewheel-3.0.4.pack"
  = javascript_include_tag "jquery.bxSlider.min"
  = javascript_include_tag "jquery.easing.1.3"
  :javascript
    $(document).ready(function() {
      $("a#light_box").fancybox({
        'transitionIn'	: 'none',
        'transitionOut'	: 'none'
      });

      $('#top_products').bxSlider({
        speed: 1900,
        pager: true/*,
        easing: 'easeOutBounce',
        auto: true,*/
      });
    });

%h3= @product.title
.border
  = link_to(image_tag(@product.image.url(:medium)), @product.image.url(:large), :id => "light_box") unless @product.image.nil?
.important
  %b=t('products.price')
  %span.price= @product.price.to_s+' грн.'
  =button_to t('products.add_to_cart'), line_items_path(:product_id => @product.id), {:class=>"add_to_cart"}

.product_description
  -if @product.description.length > 5
    %p
      %b=t('products.description')
      = @product.description
  %p
    %b=t('products.category')
    = @product.category.name.to_s
  %p
    %b=t('products.master')
    = @product.author.name.to_s

.top
  %h3=t('products.see_also_products')
  #top_products
    = render :partial => "products/horizontal_list", :locals => { :products => @see_also_products }
  .paginator
    -#%a.back{:href => "/"} ← Назад
    .line
    -#%a.forward{:href => "/"} Еще →
  .top_left_corner
  .top_right_corner
  .bottom_left_corner
  .bottom_right_corner


=# link_to t('layouts.application.back'), session[:product_params]