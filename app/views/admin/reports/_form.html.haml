= form_for [:admin,@report] do |f|
  -if @report.errors.any?
    #error_explanation
      %h2= "#{pluralize(@report.errors.count, "error")} prohibited this report from being saved:"
      %ul
        - @report.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :param
    = f.text_field :param
  .actions
    = f.submit 'Save'
    = link_to "Cancel", :back, :class=>"cancel"
