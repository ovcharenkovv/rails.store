%h1 Listing categories
%table
  %tr
    %th Name
    %th Parent
    %th Description
    %th.action
  - @categories.each do |category|
    %tr
      %td= link_to category.name.to_s, admin_category_products_path(category)
      %td= category.parent.name unless category.parent.nil?
      %td= category.description.to_s
      %td
        = link_to 'Edit', edit_admin_category_path(category)
        = link_to 'Destroy', admin_category_path(category), :confirm => 'Are you sure?', :method => :delete
%br/
= link_to 'New Category', new_admin_category_path