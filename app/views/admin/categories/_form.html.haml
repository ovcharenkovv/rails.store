= form_for([:admin,@category]) do |f|
  - if @category.errors.any?
    #error_explanation
      %h5
        = pluralize(@category.errors.count, "error")
        prohibited this category from being saved:
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :ordering
    %br/
    = f.text_field :ordering
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :parent
    %br
    = f.collection_select :parent_id, Category.root_category , :id, :name,  {:include_blank => 'root'}
  .actions
    = f.submit