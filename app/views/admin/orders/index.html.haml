%h1 Listing orders
=render "admin/orders/sort_links"
%table
  %tr
    %th ID
    %th Name
    %th Phone
    %th Email
    %th Address
    %th Delivery_type
    %th Order date:
    -#%th Pay type
    %th Status
  - @orders.each do |order|
    %tr
      %td= link_to order.id, admin_order_path(order)
      %td= link_to order.name, admin_order_path(order)
      %td= order.telephone
      %td= order.email
      %td= order.address
      %td= order.delivery_type
      %td= order.created_at
      -#%td= order.pay_type
      %td= link_to order.status.to_s, edit_admin_order_path(order)
%br/
= link_to 'New Order', new_admin_order_path

%p= will_paginate @orders