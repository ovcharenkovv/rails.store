= form_for [:admin,@order], :html => { :multipart => true } do |f|
  - if @order.errors.any?
    #error_explanation
      %h5
        = pluralize(@order.errors.count, "error")
        prohibited this product from being saved:
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg
  -#.field
  -#  = f.label :title
  -#  %br
  -#  = f.text_field :title
  .field
    = f.label :status
    %br
    = f.select :status, Order::ORDER_STATUS
  .actions
    = f.submit