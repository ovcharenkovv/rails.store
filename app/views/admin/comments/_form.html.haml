= form_for([:admin,@comment]) do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2
        = pluralize(@comment.errors.count, "error")
        prohibited this comment from being saved:
      %ul
        - @comment.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :user_name
    %br/
    = f.text_field :user_name
  .field
    = f.label :user_email
    %br/
    = f.text_field :user_email
  .field
    = f.label :comment
    %br/
    = f.text_area :comment
  .field
    = f.label :commentable_type
    %br/
    = f.text_field :commentable_type
  .field
    = f.label :commentable_id
    %br/
    = f.text_field :commentable_id
  .field
    = f.label :published
    %br/
    = f.check_box :published

  .actions
    = f.submit

