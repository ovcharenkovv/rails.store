= form_for [:admin,@parameter] do |f|
  -if @parameter.errors.any?
    #error_explanation
      %h2= "#{pluralize(@parameter.errors.count, "error")} prohibited this parameter from being saved:"
      %ul
        - @parameter.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :key
    = f.text_field :key
  .field
    = f.label :value
    = f.text_area :value

  .actions
    = f.submit 'Save'
    = link_to 'Back', :back, :class=>"cancel"
