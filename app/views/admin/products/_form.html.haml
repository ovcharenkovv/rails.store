= form_for [:admin,@category,@product], :html => { :multipart => true } do |f|
  - if @product.errors.any?
    #error_explanation
      %h2
        = pluralize(@product.errors.count, "error")
        prohibited this product from being saved:
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :description
    %br
    = f.text_area :description
  .field
    = f.label :price
    %br
    = f.text_field :price
  .field
    = f.label :category
    %br
    = f.collection_select :category_id, Category.find(:all), :id, :name, :prompt => "Select a Category"
  .field
    = f.label :author
    %br
    = f.collection_select :author_id, Author.find(:all), :id, :name, :prompt => "Select a Author"
  .field
    = f.label :image
    %br
    = f.file_field :image
  .field
    = f.label :is_hot
    %br
    = f.check_box :is_hot
  .actions
    = f.submit