= form_for(@admin_custom_order) do |f|
  - if @admin_custom_order.errors.any?
    #error_explanation
      %h2
        = pluralize(@admin_custom_order.errors.count, "error")
        prohibited this admin_custom_order from being saved:
      %ul
        - @admin_custom_order.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :phone
    %br/
    = f.text_field :phone
  .actions
    = f.submit