%h1 Listing post_categories

%table
  %tr
    %th Name
    %th Description
    %th Slug
    %th

  - @post_categories.each do |post_category|
    %tr
      %td= link_to post_category.name, admin_post_category_posts_path(post_category)
      %td= post_category.description
      %td= post_category.slug
      %td
        = link_to 'Edit', edit_admin_post_category_path(post_category)

%br

= link_to 'New Post category', new_admin_post_category_path
