= form_for([:admin,@article]) do |f|
  - if @article.errors.any?
    #error_explanation
      %h2
        = pluralize(@article.errors.count, "error")
        prohibited this article from being saved:
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :meta_k
    %br/
    = f.text_field :meta_k
  .field
    = f.label :meta_d
    %br/
    = f.text_field :meta_d
  .field
    = f.label :body
    %br/
    = f.text_area :body ,{:class => "mceEditor"}
  .field
    = f.label :slug
    %br/
    = f.text_field :slug
  .actions
    = f.submit