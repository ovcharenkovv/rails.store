= form_for(@comment) do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2
        = pluralize(@comment.errors.count, "error")
        prohibited this comment from being saved:
      %ul
        - @comment.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :body
    %br/
    = f.text_area :body
  .field
    = f.label :publish
    %br/
    = f.check_box :publish
  .field
    = f.label :rating
    %br/
    = f.text_field :rating
  .field
    = f.label :product_id
    %br/
    = f.text_field :product_id
  .actions
    = f.submit