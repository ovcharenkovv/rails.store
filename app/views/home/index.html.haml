- content_for :custom_css_js do
  = stylesheet_link_tag "bx_styles_c"
  = javascript_include_tag "jquery-1.4.3.min"
  = javascript_include_tag "jquery.bxSlider.min"

  :javascript
    $(document).ready(function(){
      $('#top_products').bxSlider({
        speed: 300,
        pager: true,
        auto: true

      });
    });

  :javascript
    $(document).ready(function(){
      $('#new_products').bxSlider({
        speed: 100,
        pager: true
      });
    });
-cache 'home' do
  -@top_products = Product.find_top_products(16)
  -@new_products = Product.find_new_products(14)
  -@random_products = Product.find_random_products(20,@top_products+@new_products)
  .top
    %h3=t('home.top_products')
    #top_products
      = render :partial => "products/horizontal_list", :locals => { :products => @top_products }
  .new
    %h3=t('home.new_products')
    #new_products
      = render :partial => "products/horizontal_list", :locals => { :products => @new_products }
  .random
    %h3=t('home.random_products')
    = render :partial => "products/random_products", :locals => { :products => @random_products }
