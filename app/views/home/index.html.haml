- content_for :custom_css_js do
  = stylesheet_link_tag "bx_styles"
  = javascript_include_tag "jquery-1.5.min"
  = javascript_include_tag "jquery.bxSlider.min"
  =# javascript_include_tag "jquery.easing.1.3"


  :javascript
    $(document).ready(function(){
        $('#top_products').bxSlider({
            speed: 1500,
            pager: true,
        });
    });

  :javascript
    $(document).ready(function(){
        $('#hot_products').bxSlider({
            speed: 1500,
            pager: true
        });
    });


%h2 Most popular products
%ul#top_products
  - @top_products.each do |product|
    %li.product
      .border
        = link_to category_product_path(product.category_id,product) , :class => "image" do
          = image_tag product.image.url(:thumb)
        = link_to category_product_path(product.category_id,product) , :class => "title" do
          = product.title.to_s
        = link_to product.author.name, author_products_path(product.author_id) , :class => "author"
        .price= number_to_currency(product.price, :unit => "Грн.", :separator => ",", :delimiter => " ", :format => "%n %u" )
%h2 Hot products

%ul#hot_products
  - @hot_products.each do |product|
    %li.product
      .border
        = link_to category_product_path(product.category_id,product) , :class => "image" do
          = image_tag product.image.url(:thumb)
        = link_to category_product_path(product.category_id,product) , :class => "title" do
          = product.title.to_s
        = link_to product.author.name, author_products_path(product.author_id) , :class => "author"
        .price= number_to_currency(product.price, :unit => "Грн.", :separator => ",", :delimiter => " ", :format => "%n %u" )

