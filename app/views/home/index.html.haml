- content_for :custom_css_js do
  = stylesheet_link_tag "bx_styles"
  = javascript_include_tag "jquery-1.5.min"
  = javascript_include_tag "jquery.bxSlider.min"
  = javascript_include_tag "jquery.easing.1.3"


  :javascript
    $(document).ready(function(){
        $('#top_products').bxSlider({
            speed: 400,
            pager: true,
            auto: true,
            easing: 'easeOutBounce'

        });
    });

  :javascript
    $(document).ready(function(){
        $('#new_products').bxSlider({
            speed: 100,
            pager: true
        });
    });

%h1=t('home.welcome')
%p.welcome=raw t('home.welcome_text')
.top
  %h3=t('home.top_products')
  #top_products
    = render :partial => "products/horizontal_list", :locals => { :products => @top_products }
  .paginator
    -#%a.back{:href => "/"} ← Назад
    .line
    -#%a.forward{:href => "/"} Еще →
  .top_left_corner
  .top_right_corner
  .bottom_left_corner
  .bottom_right_corner
.new
  %h3=t('home.new_products')
  #new_products
    = render :partial => "products/horizontal_list", :locals => { :products => @new_products }
  .paginator
    -#%a.back{:href => "/"} ← Назад
    .line
    -#%a.forward{:href => "/"} Еще →
  .top_left_corner
  .top_right_corner
  .bottom_left_corner
  .bottom_right_corner