= form_for @custom_order, :html => { :multipart => true } do |f|
  - if @custom_order.errors.any?
    #error_explanation
      %h2
        = pluralize(@custom_order.errors.count, "error")
        prohibited this custom_order from being saved:
      %ul
        - @custom_order.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :author
    %br
    = f.collection_select :author_id, Author.find(:all), :id, :name, :prompt => "Select a Author"
  .field
    = f.label :image
    %br
    = f.file_field :image
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :phone
    %br/
    = f.text_field :phone
  .actions
    = f.submit




