%h3=t('categories.title')
=#link_to t('categories.title') , :categories
%ul.category_list
  - @root_categories.each do |category|
    %li= link_to category.name, category_products_path(category)
    -if category.children.count >=1
      = render :partial=>'categories/children_list',:locals => {:child => category.children}
